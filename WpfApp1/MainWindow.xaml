<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Calculator" Height="450" Width="340">
    <Grid>
        <Grid>
            <Button Content="." HorizontalAlignment="Left" Margin="170,360,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="ButtonClick" Background="LightGray"/>
            <Button Content="0" HorizontalAlignment="Left" Margin="50,360,0,0" VerticalAlignment="Top" Height="50" Width="110" Click="ButtonClick"/>
            <Button Content="1" HorizontalAlignment="Left" Margin="50,300,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="ButtonClick"/>
            <Button Content="2" HorizontalAlignment="Left" Margin="110,300,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="ButtonClick"/>
            <Button Content="3" HorizontalAlignment="Left" Margin="170,300,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="ButtonClick"/>
            <Button Content="4" HorizontalAlignment="Left" Margin="50,240,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="ButtonClick"/>
            <Button Content="5" HorizontalAlignment="Left" Margin="110,240,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="ButtonClick"/>
            <Button Content="6" HorizontalAlignment="Left" Margin="170,240,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="ButtonClick"/>
            <Button Content="7" HorizontalAlignment="Left" Margin="50,180,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="ButtonClick"/>
            <Button Content="8" HorizontalAlignment="Left" Margin="110,180,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="ButtonClick"/>
            <Button Content="9" HorizontalAlignment="Left" Margin="170,180,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="ButtonClick"/>
            <Button Content="-" HorizontalAlignment="Left" Margin="240,140,0,0" VerticalAlignment="Top" Height="30" Width="50" Click="ButtonClick"/>
            <Button Content="*" HorizontalAlignment="Left" Margin="170,140,0,0" VerticalAlignment="Top" Height="30" Width="50" Click="ButtonClick"/>
            <Button Content="/" HorizontalAlignment="Left" Margin="110,140,0,0" VerticalAlignment="Top" Height="30" Width="50" Click="ButtonClick"/>
            <Button Content="^" HorizontalAlignment="Left" Margin="50,140,0,0" VerticalAlignment="Top" Height="30" Width="50" Click="ButtonClick"/>
            <Button Content="=" HorizontalAlignment="Left" Margin="240,300,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="EqualClick"/>
            <Button Content="clr" HorizontalAlignment="Left" Margin="240,360,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="ClearClick"/>
            <Button Content="+" HorizontalAlignment="Left" Margin="240,180,0,0" VerticalAlignment="Top" Height="110" Width="50" Click="ButtonClick"/>
            <Rectangle HorizontalAlignment="Left" Height="70" Margin="20,20,0,0" Stroke="DarkSlateGray" StrokeThickness="2" Fill="LightSteelBlue" RadiusX="20" RadiusY="10"  VerticalAlignment="Top" Width="300"/>
        </Grid>
        <TextBlock HorizontalAlignment="Left" Margin="40,35,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="260" x:Name="OutputWindow" Height="40" FontSize="35" FontFamily="Arial"/>

    </Grid>
</Window>
